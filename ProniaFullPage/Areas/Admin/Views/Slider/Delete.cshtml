@model Slider
<div class="container">
    <div class="row">
        <div class="col-12">
           <form asp-action="DeletePost" method="post">
                <div class="card" style="width: 18rem;">
                    <img src="~/uploads/sliders/@Model.ImageURL" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Title</h5>
                        <p class="card-text">@Model.Description</p>
                        <a asp-action="Index" class="btn btn-outline-primary">Go Back</a>
                        <input type="type" asp-for="@Model.Id" hidden value="@Model.Id" />
                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                    </div>
                </div>
           </form>
        </div>
    </div>
</div>
